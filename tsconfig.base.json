{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@shopify-clone/source"],
    "paths": {
      "@shopify-clone/ui": ["libs/ts/ui/src/index.ts"],
      "@shopify-clone/proto-ts": ["libs/ts/proto-ts/src/index.ts"]
    }
  }
}
